{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [".env*"]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/giphy/(.*)",
      "dest": "/api/giphy?path=$1",
      "methods": ["GET", "POST", "OPTIONS"],
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Headers": "Content-Type",
        "Access-Control-Allow-Methods": "GET, POST, OPTIONS"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
} 